<% 
  @title = 'Doar - Chá de Bebê' 
  @headTitle = 'Doe um valor para o Chá de Bebê!'
%>

<% if @donation.errors.any? %>
  <ul>
    <% @donation.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class='row'>
  <div class='col-md-4'>
    <%= form_for @donation do |f| %>
      <p>
        <label>Seu email</label>
      </p>
      <p>
        <%= f.text_field :email %>
      </p>
      <p>
        <label>Valor</label>
      </p>
        <%= f.text_field :value %>
      </p>
      <p>
        <%= f.submit "Enviar", :class => 'btn btn-success'  %>
      </p>
    <% end %>
  </div>
</div>
